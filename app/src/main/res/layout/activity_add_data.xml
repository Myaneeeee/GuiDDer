<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDataActivity"
    android:paddingTop="35dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/GuiDDerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="4dp"
        android:gravity="top|start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <TextView
            style="@style/GuiDDerHeading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Objek Pariwisata" />

        <TextView
            style="@style/GuiDDerHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/namaET"
            style="@style/GuiDDerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            style="@style/GuiDDerHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image (Input file name)" />

        <EditText
            android:id="@+id/gambarET"
            style="@style/GuiDDerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="File name (try 'pulau_komodo.png')"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            style="@style/GuiDDerHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/descET"
            style="@style/GuiDDerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            style="@style/GuiDDerHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <EditText
            android:id="@+id/locationET"
            style="@style/GuiDDerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/addBtn"
            style="@style/GuiDDerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Data" />


    </LinearLayout>

</LinearLayout>